# tsmetrics Environment Configuration Example

# Server Configuration
PORT=9100

# OAuth2 Configuration (Option 1 - OAuth Client Credentials Flow)
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here
TAILNET_NAME=your-company

# Direct Token Authentication (Option 2 - Mutually exclusive with OAuth)
# OAUTH_TOKEN=your_oauth_token

# Tailscale tsnet Configuration (Optional)
USE_TSNET=true
TSNET_HOSTNAME=tsmetrics
TSNET_STATE_DIR=/tmp/tsnet-state
TSNET_TAGS=exporter
REQUIRE_EXPORTER_TAG=false

# Logging Configuration
LOG_LEVEL=info          # debug, info, warn, error
LOG_FORMAT=text         # json, text

# Scraping Configuration
CLIENT_METRICS_TIMEOUT=10s
MAX_CONCURRENT_SCRAPES=10
CLIENT_METRICS_PORT=5252

# Device Configuration
TARGET_DEVICES=gateway-140207,gateway-130104,router.local
# TEST_DEVICES=device1,device2  # Deprecated: use TARGET_DEVICES instead
ENV=production
